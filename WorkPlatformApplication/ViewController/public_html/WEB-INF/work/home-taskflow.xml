<?xml version="1.0" encoding="UTF-8" ?>
<adfc-config xmlns="http://xmlns.oracle.com/adf/controller" version="1.2">
    <task-flow-definition id="home-taskflow">
        <default-activity>findUserComp</default-activity>
        <input-parameter-definition id="__4">
            <name>pubFlag</name>
            <value>#{pageFlowScope.pubFlag}</value>
            <class>java.lang.String</class>
        </input-parameter-definition>
        <input-parameter-definition id="__5">
            <name>adminFlag</name>
            <value>#{pageFlowScope.adminFlag}</value>
            <class>java.lang.String</class>
        </input-parameter-definition>
        <managed-bean id="__2">
            <managed-bean-name>homeManagedBean</managed-bean-name>
            <managed-bean-class>com.zypg.cms.work.view.bean.HomeManagedBean</managed-bean-class>
            <managed-bean-scope>backingBean</managed-bean-scope>
        </managed-bean>
        <view id="home">
            <page>/work/fragment/home.jsff</page>
        </view>
        <method-call id="initPlatformPrivilege">
            <method>#{backingBeanScope.homeManagedBean.initPlatformPrivilege}</method>
            <outcome>
                <fixed-outcome>toHome</fixed-outcome>
            </outcome>
        </method-call>
        <method-call id="findUserComp">
            <method>#{backingBeanScope.homeManagedBean.findUserComp}</method>
            <outcome>
                <fixed-outcome>toInit</fixed-outcome>
            </outcome>
        </method-call>
        <control-flow-rule id="__1">
            <from-activity-id>initPlatformPrivilege</from-activity-id>
            <control-flow-case id="__3">
                <from-outcome>toHome</from-outcome>
                <to-activity-id>home</to-activity-id>
            </control-flow-case>
        </control-flow-rule>
        <control-flow-rule id="__6">
            <from-activity-id>findUserComp</from-activity-id>
            <control-flow-case id="__7">
                <from-outcome>toInit</from-outcome>
                <to-activity-id>initPlatformPrivilege</to-activity-id>
            </control-flow-case>
        </control-flow-rule>
        <use-page-fragments/>
    </task-flow-definition>
</adfc-config>
